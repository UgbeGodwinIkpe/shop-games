<br>
<div class="row">
     <div class="col-sm-6 col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
         
          <div class="alert alert-success" id="success {{#if noMessage}} hidden {{/if}}">
               {{successMsg}}

          </div>
        
     </div>
</div>
{{# each products}}
<div class="row">
     {{# each this}}
     <div class="col-md-4 col-sm-6">
          <div class="thumbnail container" style="max-width: fit-content;">

               <img src="{{this.imagePath}}" class="card-img-top" alt="..." class="img-responsive"
                    style="max-height: 150px; max-width:140px">

               <div class="caption">
                    <h5>{{this.title}}</h5>
                    <p class="description">{{this.description}}</p>
                    <div class="clearfix" style="margin-bottom: 10px; display:inline-flex">
                         <div>
                              <h3>${{this.price}}</h3>
                         </div>
                         <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button"
                              style="margin-left: 15px;">Add to
                              Shopping cart</a>
                    </div>
               </div>
          </div>

     </div>
     {{/each}}
</div>
{{/each}}